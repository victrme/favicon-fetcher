{
	"tasks": {
		"test": "deno test --allow-net",
		"demo": "npx http-server ./demo -c-1",
		"dev": "npx wrangler dev ./package/src/index.ts",
		"dry-run": "tsup && npm publish --dry-run"
	},
	"imports": {
		"expect": "jsr:@std/expect@^1.0.11"
	},
	"workspace": [
		"./package"
	],
	"fmt": {
		"singleQuote": false,
		"semiColons": false,
		"indentWidth": 4,
		"lineWidth": 144,
		"useTabs": true
	},
	"lint": {
		"rules": {
			"exclude": ["no-sloppy-imports"]
		}
	},
	"unstable": [
		"sloppy-imports"
	],
	"nodeModulesDir": "auto"
}
